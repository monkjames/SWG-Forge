{
    "name": "cockpit-editor",
    "displayName": "SWG Cockpit Editor",
    "description": "Visual editor for SWG cockpit (CPIT) IFF files â€” camera offsets, zoom levels, hyperspace",
    "version": "1.0.0",
    "publisher": "swgemu",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": ["Other"],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "customEditors": [
            {
                "viewType": "cockpitEditor.cpitFile",
                "displayName": "Cockpit Editor",
                "selector": [
                    { "filenamePattern": "**/cockpit/*.iff" }
                ],
                "priority": "option"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.74.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@swgemu/core": "file:../core"
    }
}
