{
    "name": "crafting-workshop",
    "displayName": "SWGEmu Crafting Workshop",
    "description": "Simulate and design craftable items for SWGEmu",
    "version": "1.2.0",
    "publisher": "swgemu",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:craftingWorkshop.open",
        "onCommand:craftingWorkshop.openFromSchematic"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "craftingWorkshop.open",
                "title": "Open Crafting Workshop",
                "category": "SWGEmu"
            },
            {
                "command": "craftingWorkshop.openFromSchematic",
                "title": "Open in Crafting Workshop",
                "category": "SWGEmu"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourcePath =~ /draft_schematic/ && resourceExtname == .iff",
                    "command": "craftingWorkshop.openFromSchematic",
                    "group": "navigation"
                },
                {
                    "when": "resourcePath =~ /draft_schematic/ && resourceExtname == .lua",
                    "command": "craftingWorkshop.openFromSchematic",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "when": "resourcePath =~ /draft_schematic/ && resourceExtname == .iff",
                    "command": "craftingWorkshop.openFromSchematic",
                    "group": "navigation"
                },
                {
                    "when": "resourcePath =~ /draft_schematic/ && resourceExtname == .lua",
                    "command": "craftingWorkshop.openFromSchematic",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.74.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@swgemu/core": "file:../core"
    }
}
