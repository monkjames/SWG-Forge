{
    "name": "building-npc-planner",
    "displayName": "SWG Building NPC Planner",
    "description": "Visual tool for placing NPCs inside buildings - no more manual coordinate recording",
    "version": "1.0.0",
    "publisher": "swgemu",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:buildingNpcPlanner.openPlanner"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "buildingNpcPlanner.openPlanner",
                "title": "Plan NPC Spawns",
                "category": "SWG"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.74.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@swgemu/core": "file:../core"
    }
}
