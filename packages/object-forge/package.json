{
    "name": "object-forge",
    "displayName": "SWGEmu Object Forge",
    "description": "Generate complete SWG armor sets, weapons, and clothing - creates all Lua templates, TRE entries, CRC registrations, and ACM customization in one shot",
    "version": "1.0.0",
    "publisher": "swgemu",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:objectForge.open"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "objectForge.open",
                "title": "Open Object Forge",
                "category": "SWGEmu"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.74.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@swgemu/core": "file:../core"
    }
}
